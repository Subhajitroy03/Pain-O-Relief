            }

            .about h2 {
                font-size: 2rem;
            }

            .contact {
                padding: 4rem 0;
            }

            .contact h2 {
                font-size: 2rem;
            }

            .contact-details h3 {
                font-size: 1.5rem;
            }

            .container {
                padding: 0 1rem;
            }
        }

        footer {
            background: var(--primary);
            color: var(--white);
            text-align: center;
            padding: 2rem;
            position: relative;
            overflow: hidden;
        }

        footer::before {
